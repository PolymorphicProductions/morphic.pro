<div class="bg-image" style="background-image: url(<%= Routes.static_path(@conn, "/images/login2.jpg") %>)">
  <div class="justify-center w-screen min-h-screen bg-black-07">
    <div
      class="h-auto pt-20 login-form md:pt-0 md:top-0 md:left-0 md:right-0 md:bottom-0 md:absolute md:my-auto md:mx-auto sm:max-w-sm">
      <h1 class="text-xl font-bold text-center text-white">Reset password</h1>
      <%= get_flash(@conn) |> Map.values |> List.to_string |> (fn string -> "<h3 class='text-center text-red-400'> #{string}</h3>" end).() |> raw %>
      <%= form_for :user, Routes.user_reset_password_path(@conn, :create), fn f -> %>

      <div class="">
        <%= error_tag f, :email, class: "text-red-500" %>
        <%= text_input f, :email, class: "bg-transparent shadow appearance-none border border-gray-500 w-full py-4 px-3 text-white mb-3 leading-tight focus:outline-none focus:border-white hover:border-gray-200 transition-colors duration-700", id: "username", placeholder: "Email" %>
      </div>

      <div class="">
        <%= submit "Reset Password", class: "w-full border border-white text-white hover:text-gray-600 hover:bg-gray-200 font-bold py-4 px-4 focus:outline-none transition-colors duration-700" %>
      </div>
      <% end %>
      <p class="pb-2 text-center text-white"><%= link "Sign in", to: Routes.user_session_path(@conn, :new) %> |
        <%= link "Register", to: Routes.user_session_path(@conn, :new) %></p>

      <p class="text-xs text-center text-gray-500">
        &copy;2020 Morphic Pro llc. All rights reserved.
      </p>
    </div>
  </div>
</div>