<nav
  class="fixed top-0 left-0 z-10 flex flex-wrap items-center justify-between w-full px-2 py-3 text-white transitions duration-700 navbar-fixed navbar-expand-lg <%= @conn.assigns[:nav_class] %>">
  <div class="container flex flex-wrap items-center justify-between mx-auto">
    <div class="relative flex justify-between w-full px-4 lg:w-auto lg:static lg:block lg:justify-start">
      <a class="relative inline-block py-2 ml-5 mr-4 font-bold leading-relaxed whitespace-no-wrap " href="/">
        <span class="pr-1 display-block icon-shape logo"></span>
        Morphic.Pro
      </a>
      <button
        class="block px-3 py-1 text-xl leading-none bg-transparent border border-transparent border-solid rounded outline-none cursor-pointer lg:hidden focus:outline-none"
        type="button" onclick="window.toggleNavbar('collapse-navbar')">
        <i class="fas fa-bars"></i>
      </button>
    </div>
    <div class="items-center flex-grow hidden lg:flex" id="collapse-navbar">
      <ul class="flex flex-col list-none lg:flex-row lg:ml-auto">
        <li class="nav-item">
          <a class="flex items-center px-3 py-4 font-normal leading-snug uppercase transition-opacity duration-1000 hover:opacity-50"
            href="#">
            <span class="ml-2">Services</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="flex items-center px-3 py-4 font-normal leading-snug uppercase transition-opacity duration-500 hover:opacity-50"
            href="<%= Routes.post_path(@conn, :index) %>">
            <span class="ml-2">Posts</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="flex items-center px-3 py-4 font-normal leading-snug uppercase transition-opacity duration-1000 hover:opacity-50"
            href="<%= Routes.snap_path(@conn, :index) %>">
            <span class="ml-2">Snaps</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="flex items-center px-3 py-4 font-normal leading-snug uppercase transition-opacity duration-1000 hover:opacity-50"
            href="#">
            <span class="ml-2">Contact</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="flex items-center px-3 py-4 font-normal leading-snug uppercase transition-opacity duration-1000 hover:opacity-50"
            href="#">
            <span class="ml-2">About</span>
          </a>
        </li>

        <%= if @current_user do %>
        <li class="nav-item">
          <%= link to: Routes.user_session_path(@conn, :delete), method: :delete,
          class: "flex items-center px-3 py-4 font-normal leading-snug
          uppercase transition-opacity duration-1000 hover:opacity-50" do %>

          <span class="ml-2">Sign out</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link to: Routes.user_settings_path(@conn, :edit), class: "flex
          items-center px-3 py-4 font-normal leading-snug uppercase
          transition-opacity duration-1000 hover:opacity-50" do %>

          <span class="ml-2">Account</span>
          <% end %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link to: Routes.user_session_path(@conn, :new), class: "flex
          items-center px-3 py-4 font-normal leading-snug uppercase
          transition-opacity duration-1000 hover:opacity-50" do %>
          <span class="ml-2">Sign In</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link to: Routes.user_registration_path(@conn, :new), class: "flex
          items-center px-3 py-4 font-normal leading-snug uppercase
          transition-opacity duration-1000 hover:opacity-50" do %>
          <span class="ml-2">Register</span>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>