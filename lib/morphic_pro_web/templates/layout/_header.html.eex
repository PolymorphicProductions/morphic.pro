<nav
  class="fixed top-0 left-0 z-10 flex flex-wrap items-center justify-between w-full px-2 py-3 text-white transitions duration-700 navbar-fixed navbar-expand-lg">
  <div class="container flex flex-wrap items-center justify-between mx-auto">
    <div class="relative flex justify-between w-full px-4 lg:w-auto lg:static lg:block lg:justify-start">
      <%= live_redirect to: Routes.page_index_path(@conn, :index), class: "relative inline-block py-2 ml-5 mr-4 font-bold leading-relaxed whitespace-no-wrap" do %>
      <span class="pr-1 display-block icon-shape logo"></span>
      Morphic.Pro
      <% end %>
      <button
        class="block px-3 py-1 text-xl leading-none bg-transparent border border-transparent border-solid rounded outline-none cursor-pointer lg:hidden focus:outline-none"
        type="button" onclick="window.toggleNavbar('collapse-navbar')">
        <i class="fas fa-bars"></i>
      </button>
    </div>
    <div class="items-center flex-grow hidden lg:flex" id="collapse-navbar">
      <ul class="flex flex-col list-none lg:flex-row lg:ml-auto">
        <li class="nav-item">
          <%= live_redirect to: Routes.post_index_path(@conn, :index), class: "flex items-center px-3 py-2 text-xs font-normal leading-snug uppercase transition-opacity duration-500 hover:opacity-50" do %>
          <i class="text-lg fas fa-book-open leading-lg"></i><span class="ml-2">Posts</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= live_redirect to: Routes.snap_index_path(@conn, :index), class: "flex items-center px-3 py-2 text-xs font-normal leading-snug uppercase transition-opacity duration-500 hover:opacity-50" do %>
          <i class="text-lg fas fa-camera leading-lg"></i><span class="ml-2">Snaps</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= live_redirect to: Routes.page_about_path(@conn, :about), class: "flex items-center px-3 py-2 text-xs font-normal leading-snug uppercase transition-opacity duration-500 hover:opacity-50" do %>
          <i class="text-lg fas fa-address-card leading-lg"></i><span class="ml-2">About</span>
          <% end %>
        </li>

        <%= if @current_user do %>
        <li class="nav-item">
          <%= link to: Routes.user_session_path(@conn, :delete), method: :delete,
          class: "flex items-center px-3 py-2 text-xs font-normal leading-snug
          uppercase transition-opacity duration-1000 hover:opacity-50" do %>
          <i class="text-lg fas fa-sign-out-alt leading-lg"></i>
          <span class="ml-2">Sign out</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link to: Routes.user_settings_path(@conn, :edit), class: "flex
          items-center px-3 py-2 text-xs font-normal leading-snug uppercase
          transition-opacity duration-1000 hover:opacity-50" do %>
          <i class="text-lg fas fa-user-circle leading-lg"></i>
          <span class="ml-2">Account</span>
          <% end %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link to: Routes.user_session_path(@conn, :new), class: "flex
          items-center px-3 py-2 text-xs font-normal leading-snug uppercase
          transition-opacity duration-1000 hover:opacity-50" do %>
          <i class="text-lg fas fa-sign-in-alt leading-lg"></i><span class="ml-2">Sign In</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link to: Routes.user_registration_path(@conn, :new), class: "flex
          items-center px-3 py-2 text-xs font-normal leading-snug uppercase
          transition-opacity duration-1000 hover:opacity-50" do %>
          <i class="text-lg fas fa-user-circle leading-lg"></i>
          <span class="ml-2">Register</span>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>