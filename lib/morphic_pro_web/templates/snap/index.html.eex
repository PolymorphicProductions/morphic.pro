<div class="bg-image" style="background-image: url(<%= Routes.static_path(@conn, "/images/login5.jpg") %>)">
  <div class="bg-black-05">
    <div class="container px-3 py-6 mx-auto">
      <div class="w-full my-12">
        <h1 class="mt-12 mb-2 text-4xl leading-tight text-center text-white font-book page-title">The Snaps</h1>
        <p class="mb-8 text-2xl font-thin leading-normal text-center text-white">In a blink of an eye </p>
      </div>
    </div>
  </div>
</div>

<div class="container px-4 py-10 mx-auto">
  <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">

    <%= for snap <- @snaps do %>
    <div class="max-w-sm mx-auto overflow-hidden bg-white shadow-md">
      <%= link to: Routes.snap_path(@conn, :show, snap) do %>
      <img class="w-full" src="<%= snap.thumb_img %>" alt="Sunset in the mountains">
      <% end %>

      <div class="px-6 py-4">
        <div class="mb-2 text-xs"><%= parse_date snap.published_at %></div>

        <div class="text-base text-gray-700 snap-body">
          <%= snap.body |> parse_markdown |> parse_tags |> raw %>
        </div>
      </div>

      <div class="px-6 pb-4">
        <%= link to: Routes.snap_path(@conn, :show, snap), class: "bg-gray-600 hover:bg-gray-800 text-xs text-white font-bold py-2 px-4 text-gray-100" do %>
        <span class="pr-2">READ MORE</span> <i class="fas fa-arrow-circle-right"></i>
        <% end %>
      </div>

    </div>
    <% end %>
  </div>
</div>

<div class="container px-4 py-10 mx-auto">
  <%= paginate @conn, @dissolver %>
</div>