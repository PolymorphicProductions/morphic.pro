<div class="bg-image" style="background-image: url(<%= Routes.static_path(@socket, "/images/login3.jpg") %>)"
  phx-hook="NavState">
  <div class="bg-black-05">
    <div class="px-3 py-6 mx-auto">
      <div class="w-full my-12">
        <h1 class="mt-12 mb-2 text-4xl leading-tight text-center text-white font-book page-title fade-in">The Blog</h1>
        <p class="mb-8 text-2xl font-thin leading-normal text-center text-white fade-in">The lines in between </p>

        <%= if live_flash(@flash, :info) do %>
        <div class="mx-auto w-1/2 relative p-3 rounded text-blue-700 bg-blue-200 bg-opacity-75 fade-in">
          <%= live_flash(@flash, :info) %>
          <button class=" opacity-75 cursor-pointer absolute top-0 right-0 py-2 px-3 hover:opacity-100">×</button>
        </div>
        <% end %>

        <%= if live_flash(@flash, :error) do %>
        <div class="mx-auto w-1/2 relative p-3 rounded text-red-700 bg-red-200 bg-opacity-75 fade-in">
          <%= live_flash(@flash, :error) %>
          <button class="opacity-75 cursor-pointer absolute top-0 right-0 py-2 px-3 hover:opacity-100">×</button>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

<div class="container px-4 py-10 mx-auto">
  <div id="posts" class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">

    <%= for post <- @posts do %>
    <%= live_component @socket, MorphicProWeb.PostLive.PostComponent, post: post, id: post.id %>
    <% end %>
  </div>
</div>

<div id="pagination" class="container px-4 py-10 mx-auto" phx-hook="ScrollToTop" onClick="window.scrollTo(0, 0);">
  <%= HTML.paginate @dissolver, post_paginate_helper(@socket, @live_action, @scope) %>
</div>